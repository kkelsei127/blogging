<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{project.id}}">{{post.post_name}}</a>
    </h2>
    <p>
      {{{post.post_body}}}
    </p>
    <p>Created by {{post.user_name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
        <!--this might be wrong on how to target the comments -->
      {{{post.comment_id}}}
    </p>
  </div>
</div>
{{/each}}
